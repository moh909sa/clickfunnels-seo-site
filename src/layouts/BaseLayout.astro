---
export interface Props {
  title: string;
  description: string;
  slug: string;
  date?: string;
  tags?: string[];
  affiliate_links?: Record<string, string>;
  og_image?: string;
  related?: string[];
}

const { 
  title, 
  description, 
  slug, 
  date = new Date().toISOString().split('T')[0],
  tags = ['seo', 'clickfunnels', 'affiliate'],
  affiliate_links = { clickfunnels: "https://www.clickfunnels.com/signup-flow?aff=36738480f0374bbe21a0d263c8b707ef738b7c7b7eb67bda8f16f741f9edca5a" },
  og_image = "/og-default.png",
  related = []
} = Astro.props;

// Ensure description is 140-160 characters
const metaDescription = description.length > 160 
  ? description.substring(0, 157) + '...'
  : description.length < 140
  ? description + ' '.repeat(140 - description.length)
  : description;
---

